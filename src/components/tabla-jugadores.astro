---
/** Tabla simple para la tabla `pulsador`.
 *  Muestra: id, fecha legible, usuario, rol
 *  Edita:   activado, jugando (checkbox)
 *  Botón:   Refrescar
 */
---
<div class="card">
  <h2 class="text-center mb-3">Players</h2>

  <div style="margin-bottom:.75rem;">
    <button id="tj-refresh" class="btn">Refrescar</button>
  </div>

  <div class="tj-wrap">
    <table class="tj-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Fecha</th>
          <th>Usuario</th>
          <th>Rol</th>
          <th>Activado</th>
          <th>Jugando</th>
        </tr>
      </thead>
      <tbody id="tj-body">
        <tr><td colspan="6" class="tj-center">Cargando…</td></tr>
      </tbody>
    </table>
  </div>
</div>

<style>
:root {
  color-scheme: dark;
  --bg: #111827;
  --bg-alt: #1f2937;
  --border: #374151;
  --txt: #e5e7eb;
  --muted: #9ca3af;
}

.card {
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 12px;
  box-shadow: 0 6px 18px rgba(0,0,0,.45);
  padding: 1.5rem;
}

.tj-wrap { 
  max-height: 400px; 
  overflow: auto; 
  border:1px solid var(--border); 
  border-radius:12px; 
  background: var(--bg-alt); 
}

.tj-table { width:100%; border-collapse:collapse; color: var(--txt); }

.tj-table thead th {
  position:sticky; top:0; background: var(--bg-alt); z-index:1;
  text-align:left; font-weight:700; 
  color: var(--txt); 
  padding:10px 12px; 
  border-bottom:1px solid var(--border);
}

.tj-table tbody td { 
  padding:10px 12px; 
  border-bottom:1px solid var(--border); 
  vertical-align:middle; 
}

.tj-table tbody tr:nth-child(even){
  background: #1e293b; /* raya alterna oscura */
}

.tj-center { 
  text-align:center; 
  color: var(--muted); 
  padding:14px; 
}

.mono { 
  font-variant-numeric: tabular-nums; 
  font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace; 
}
</style>

<script>
  import("../scripts/tabla-jugadores.js").then(mod => mod.initTablaJugadores());
</script>
